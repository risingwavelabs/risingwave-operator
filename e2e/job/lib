## associative array for job status
JOBS=()

## run command in the background
function background() {
  eval $1 &
  JOBS[$!]="$1"
}

## check exit status of each job
## preserve exit status in ${JOBS}
## returns 1 if any job failed
function reap() {
  local cmd
  local status=0
  for pid in "${!JOBS[@]}"; do
    cmd=${JOBS[${pid}]}
    wait "${pid}"
    JOBS[${pid}]=$?
    if [[ ${JOBS[${pid}]} -ne 0 ]]; then
      status=${JOBS[${pid}]}
      echo -e "[${pid}] Exited with status: ${status}\n${cmd}"
    fi
  done
  return ${status}
}

## Trap and add traps.
function overtrap {
  trap="$1"
  sig=$(echo "$2" | tr [a-z] [A-Z])
  cur="$(trap -p "$sig" | sed -nr "s/trap -- '(.*)' $sig\$/\1/p")"

  # shellcheck disable=SC2064
  if test ${cur:+x}; then
    trap "{ $trap; }; $cur" "$sig"
  else
    trap "$trap" "$sig"
  fi
}